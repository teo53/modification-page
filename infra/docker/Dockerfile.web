# =============================================================================
# Dockerfile for LunaAlba Web (Vite + React)
# Multi-stage build with nginx for production
# =============================================================================

# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@9 --activate

# Copy workspace configuration
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY packages/types/package.json ./packages/types/
COPY apps/web/package.json ./apps/web/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source files
COPY packages/types ./packages/types
COPY apps/web ./apps/web

# Build types package
RUN pnpm --filter @lunaalba/types build

# Build web app
ARG VITE_API_URL
ENV VITE_API_URL=${VITE_API_URL}

RUN pnpm --filter @lunaalba/web build

# Production stage with nginx
FROM nginx:alpine AS production

# Set default port and API backend URL
ENV PORT=80
ENV API_BACKEND_URL=http://localhost:3000

# Copy custom nginx config as template
COPY infra/docker/nginx.conf /etc/nginx/templates/nginx.conf.template

# Copy built files
COPY --from=builder /app/apps/web/dist /usr/share/nginx/html

# Use envsubst to replace PORT and API_BACKEND_URL at runtime
CMD /bin/sh -c "envsubst '\$PORT \$API_BACKEND_URL' < /etc/nginx/templates/nginx.conf.template > /etc/nginx/nginx.conf && nginx -g 'daemon off;'"
