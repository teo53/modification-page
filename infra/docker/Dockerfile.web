# =============================================================================
# Dockerfile for LunaAlba Web (Vite + React)
# Multi-stage build with nginx for production
# =============================================================================

# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@9 --activate

# Copy workspace configuration
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY packages/types/package.json ./packages/types/
COPY apps/web/package.json ./apps/web/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source files
COPY packages/types ./packages/types
COPY apps/web ./apps/web

# Build types package
RUN pnpm --filter @lunaalba/types build

# Build web app
ARG VITE_API_URL
ENV VITE_API_URL=${VITE_API_URL}

RUN pnpm --filter @lunaalba/web build

# Production stage with nginx
FROM nginx:alpine AS production

# Set default port (Railway sets this)
ENV PORT=80

# Copy custom nginx config as template
COPY infra/docker/nginx.conf /etc/nginx/templates/default.conf.template

# Copy built files
COPY --from=builder /app/apps/web/dist /usr/share/nginx/html

# Create nginx config that uses PORT env var
RUN echo 'server { \
  listen ${PORT}; \
  server_name _; \
  root /usr/share/nginx/html; \
  index index.html; \
  add_header X-Frame-Options "SAMEORIGIN" always; \
  add_header X-Content-Type-Options "nosniff" always; \
  location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ { \
  expires 1y; \
  add_header Cache-Control "public, immutable"; \
  } \
  location / { \
  try_files $uri $uri/ /index.html; \
  } \
  location /health { \
  access_log off; \
  return 200 "OK"; \
  add_header Content-Type text/plain; \
  } \
  }' > /etc/nginx/templates/default.conf.template

# Use envsubst to replace PORT at runtime
CMD /bin/sh -c "envsubst '\$PORT' < /etc/nginx/templates/default.conf.template > /etc/nginx/conf.d/default.conf && nginx -g 'daemon off;'"
