# ===========================================
# LunaAlba Web - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ===========================================
# API Configuration
# ===========================================
# Development: Leave empty to use proxy (vite.config.ts handles this)
# Production: Set to your backend URL
VITE_API_URL=

# ===========================================
# Cloudinary (Image Upload)
# ===========================================
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ===========================================
# Analytics (Optional)
# ===========================================
# Microsoft Clarity - Get ID from https://clarity.microsoft.com
VITE_CLARITY_ID=

# Google Analytics 4 - Get ID from https://analytics.google.com (e.g., G-XXXXXXXXXX)
VITE_GA_ID=

# ===========================================
# Development Settings
# ===========================================
# Adult verification bypass in dev environment
# Set to 'false' to test adult verification flow in development
VITE_DEV_ADULT_BYPASS=true

# Test account emails (optional - for development)
VITE_TEST_MEMBER_EMAIL=
VITE_TEST_ADVERTISER_EMAIL=
VITE_TEST_ADMIN_EMAIL=
VITE_TEST_PASSWORD=

# ===========================================
# Payment Configuration (Required for production)
# ===========================================
# Bank account info for payment transfers
VITE_PAYMENT_BANK_NAME=카카오뱅크
VITE_PAYMENT_ACCOUNT_NUMBER=3333-00-1234567
VITE_PAYMENT_ACCOUNT_HOLDER=달빛알바
